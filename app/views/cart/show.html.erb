<h1>Cart</h1>
<h3>Total: <%= number_to_currency(cart.total) %></h3>
<%= link_to "Empty Cart" %>
<ul id="items">
  <% cart.items.each do |item, quantity| %>
    <li id="item-<%= item.id %>">
      <%= item.name %>
      <%= image_tag item.image %>
      Sold By: <%= item.user.name %>
      <%=  number_to_currency(item.price) %>
      quantity: <%= quantity %>
      subtotal: <%= number_to_currency(cart.subtotal(item)) %>
    </li>
  <% end %>
</ul>
